{
  "openapi": "3.0.1",
  "info": {
    "title": "Buffy the Vampire Slayer API",
    "description": "An API that uses GET requests to generate information regarding all 144 episodes from all 7 seasons of Buffy the Vampire Slayer, as well as the ability to search episodes by season.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://buffy-the-vampire-slayer-api.herokuapp.com"
    }
  ],
  "paths": {
    "/episode/season/{ID}": {
      "get": {
        "description": "Get all episodes and their information by ID for seasons 1 through 7",
        "operationId": "getSeasonEpisodesById",
        "parameters": [
          {
            "name": "ID",
            "in": "path",
            "description": "ID of season to return episodes",
            "required": true,
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 7
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful pull of season's episodes"
          },
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "Season not found"
          }
        }
      }
    },
    "/episode": {
      "get": {
        "description": "Get episode information from the following categories -- Categories include -- season, episode_number, title, air_date, director, writers, plot, quote from episode, piece of trivia from the episode, and imdb_url",
        "responses": {
          "200": {
            "description": "Successful pull of episode information",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "properties": {
                      "id": {
                        "type": "integer",
                        "example": 12
                      },
                      "season": {
                        "type": "integer",
                        "example": 1
                      },
                      "episode_number": {
                        "type": "integer",
                        "example": 4
                      },
                      "title": {
                        "type": "string",
                        "example": "The Gift"
                      },
                      "air_date": {
                        "type": "string",
                        "example": "March 10, 1997"
                      },
                      "director": {
                        "type": "string",
                        "example": "Joss Whedon"
                      },
                      "writers": {
                        "type": "array",
                        "example": "Rob Des Hotel, Dean Batali"
                      },
                      "plot": {
                        "type": "string",
                        "example": "Buffy discovers Angel's dark secret and hesitates to do anything about it, which could spell danger for someone she loves."
                      },
                      "quote": {
                        "type": "string",
                        "example": "Willow Rosenberg -- Sore thumbs. Do they stick out? I mean, have you ever seen a thumb and gone, \"Wow! That baby is sore? Xander Harris-- You have too many thoughts."
                      },
                      "trivia": {
                        "type": "string",
                        "example": "There is a photo of a young Rupert Giles holding a bass guitar. The production crew faked the photo by superimposing his head onto a photo of Sid Vicious."
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid endpoint supplied"
          },
          "404": {
            "description": "Episodes not found"
          }
        }
      }
    }
  }
}
